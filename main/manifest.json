{
  "manifest_version": 3,
  "name": "ScamSlayer",
  "version": "1.0",
  "description": "Detects and warns about potential scam pop-ups",
  "permissions": ["activeTab", "storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },

  "icons": {
    "16": "ScamSlayerLogo.png",
    "48": "ScamSlayerLogo.png",
    "128": "ScamSlayerLogo.png"
  }
}
